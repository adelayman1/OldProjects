<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.profileScreen.editScreen.AccountTypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivDenyChangesTypeAccount"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@raw/seez"
                    android:text="Basic Info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivAcceptTypeAccountChanges"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_check_24"
                android:tint="@color/white" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@raw/seez"
            android:text="Account Type"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />

        <LinearLayout
            android:id="@+id/lnPostSettings"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text"
            android:backgroundTint="#232323"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/accountTypeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/hint"
                    android:text="Normal"
                    android:fontFamily="@raw/rm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />
                <RadioButton
                    android:id="@+id/radioWeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/hint"
                    android:text="Website"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@raw/rm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />
                    <EditText
                        android:id="@+id/etWebsiteURL"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:hint="enter you website url"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColorHint="@color/hint"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/edit_text"/>

                <RadioButton
                    android:id="@+id/radioPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/hint"
                    android:text="Private"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@raw/rm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>