<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivCircleStory"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_centerInParent="true"
                android:padding="5dp" />

            <com.devlomi.circularstatusview.CircularStatusView
                android:id="@+id/statuesLine"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_centerInParent="true"
                app:portion_spacing="@dimen/_3sdp"
                app:portion_width="@dimen/_1sdp"
                app:portions_count="1" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tvStoryUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@raw/seez"
            android:layout_marginLeft="@dimen/_10sdp"
            android:ellipsize="end"
            android:text="naaaaaaaaaaaaaaame"
                        android:textColor="@color/white"
            android:paddingBottom="@dimen/_2sdp"
            android:maxLines="1"
            android:maxWidth="@dimen/_45sdp"
            android:textSize="@dimen/_13ssp" />

</LinearLayout>