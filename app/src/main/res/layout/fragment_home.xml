<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.homeScreen.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:indeterminateTint="@color/black"/>

        <com.xw.repo.widget.BounceScrollView
            android:id="@+id/svMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/bottomBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/_15sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:fontFamily="@raw/rb"
                    android:gravity="center"
                    android:text="Movie App"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_19ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@raw/manrope_bold"
                    android:gravity="center"
                    android:text="Recent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17ssp" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/recentMoviesViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_390sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_36sdp"
                    android:paddingRight="@dimen/_36sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@raw/manrope_bold"
                    android:gravity="center"
                    android:text="All Movies"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_12sdp" />
            </LinearLayout>
        </com.xw.repo.widget.BounceScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>