<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".presentation.addPostScreen.AddPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_round_keyboard_backspace_24"
            android:tint="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:fontFamily="@raw/seez"
            android:text="New Post"

            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>

    <EditText
        android:id="@+id/etPostText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@null"
        android:gravity="top"
        android:hint="Enter post text..."
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/hint" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:background="@color/hint" />

    <ImageView
        android:id="@+id/ivViewImageAdded"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivAddImage"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_outline_image_24"
            android:tint="@color/blue" />
        <ImageView
            android:id="@+id/ivAddVideo"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/baseline_play_circle_filled_black_24"
            android:layout_marginLeft="@dimen/_10sdp"
            android:tint="@color/blue" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivSettingPost"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:tint="@color/blue"
                android:src="@drawable/ic_baseline_settings_24"
                android:scaleType="fitCenter"
                android:background="@null"/>
            <Button
                android:id="@+id/btnPost"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/small_radius"
                android:backgroundTint="#e2e3e6"
                android:text="Post"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lnPostSettings"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@drawable/edit_text"
        android:backgroundTint="#232323"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@raw/rm"
                android:text="Disable Comments"
                android:textColor="@color/button"
                android:textSize="@dimen/_12sdp" />
            <Switch
                android:id="@+id/switchDisableComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@raw/rm"
                android:text="Show for followers only"
                android:textColor="@color/button"
                android:textSize="@dimen/_12sdp" />
            <Switch
                android:id="@+id/switchFriendsOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>