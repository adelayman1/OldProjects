<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".presentation.profileScreen.editScreen.EditActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDenyChanges"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_baseline_close_24"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@raw/seez"
                        android:text="Basic Info"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/ivAcceptChanges"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_baseline_check_24"
                    android:tint="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/note"
                android:gravity="left">
                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="You can edit your information"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp" />
                <TextView
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="change any information in jk will change information in your JK ID"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivChangeUserAvatar"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/small_radius"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etChangeFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@null"
                        android:fontFamily="@raw/rm"
                        android:hint="First name"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/_11ssp" />

                    <EditText
                        android:id="@+id/etChangeLastName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@null"
                        android:fontFamily="@raw/rm"
                        android:hint="Last name"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </LinearLayout>
            <EditText

                android:id="@+id/etChangeHint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/small_radius"
                android:fontFamily="@raw/rm"
                android:hint="hint"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:tint="@color/hint" />

                <EditText
                    android:id="@+id/etChangeWhatLove"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:background="@drawable/small_radius"
                    android:fontFamily="@raw/seez"
                    android:gravity="center"
                    android:hint="what you love"
                    android:textColor="@color/hint"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:text="Gender"
                    android:fontFamily="@raw/rm"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/_13ssp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioChangeRadioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/hint"
                        android:text="Male"
                        android:textColor="@color/hint"
                        android:textSize="@dimen/_13ssp" />

                    <RadioButton
                        android:id="@+id/radioChangeRadioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/hint"
                        android:text="Female"
                        android:textColor="@color/hint"
                        android:textSize="@dimen/_13ssp" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:text="Birthday"
                    android:fontFamily="@raw/rm"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/_13ssp" />

                <Button
                    android:id="@+id/etDay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/small_radius"
                    android:gravity="left|center_vertical"
                    android:hint="day"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColorHint="@color/hint" />


                <Button
                    android:id="@+id/etMonth"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/small_radius"
                    android:gravity="left|center_vertical"
                    android:hint="month"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColorHint="@color/hint" />


                <Button
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/small_radius"
                    android:gravity="left|center_vertical"
                    android:hint="year"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColorHint="@color/hint" />

                <Spinner
                    android:id="@+id/spChangeBirthdayViewOptions"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/small_radius"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColorHint="@color/hint" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:text="Country"
                    android:fontFamily="@raw/rm"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/_13ssp" />


                <EditText
                    android:id="@+id/etChangeCountry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/small_radius"
                    android:hint="Country name"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColorHint="@color/hint" />

            </LinearLayout>
            <FrameLayout
                android:id="@+id/flEditAccountType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>