<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".presentation.messageScreen.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/lnSendMessage"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:src="@drawable/ic_cam_back"
                android:tint="@color/blue" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:src="@color/hint" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:fontFamily="@raw/manrope_bold"
                android:text="пожаловать"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnSendMessage"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivAddMessage"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_30sdp"
            android:tint="@color/blue"
            android:layout_marginRight="@dimen/_7sdp"
            android:src="@drawable/ic_outline_add_circle_outline_24"/>
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.5"
            android:textColorHint="@color/hint"
            android:fontFamily="@raw/manrope_regular"
            android:hint="Your message"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/button_post"/>
        <ImageView
            android:id="@+id/ivSendMessage"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_30sdp"
            android:tint="@color/blue"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_13sdp"
            android:src="@drawable/ic_round_send_24"/>
    </LinearLayout>
</RelativeLayout>