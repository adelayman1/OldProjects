<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:orientation="vertical">


    <com.makeramen.roundedimageview.RoundedImageView
        android:transitionName="imageTN"
        android:id="@+id/ivFilm"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_150sdp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@color/black"
        android:src="@color/black"
        app:riv_corner_radius="@dimen/_12sdp" />


    <TextView
        android:transitionName="nameTN"
        android:id="@+id/tvMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:text="Jocker"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold" />

    <TextView
        android:transitionName="typeTN"
        android:id="@+id/tvMovieType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comedy,Drama,Action"
        android:textColor="@color/hint"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />

    <TextView
        android:transitionName="runtimeTN"
        android:id="@+id/tvRuntime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="runtime:1h 22m"
        android:textColor="@color/hint"
        android:textSize="@dimen/_11ssp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_star_24"
            android:tint="@color/star_color" />

        <TextView
            android:transitionName="rateTN"
            android:id="@+id/tvMovieRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="10.0"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>