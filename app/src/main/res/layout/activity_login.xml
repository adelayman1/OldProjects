<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.loginScreen.LoginActivity"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center">
    <EditText
        android:id="@+id/etEmailLogin"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:hint="Email"
        android:textColorHint="@color/hint"
        android:paddingLeft="@dimen/_10sdp"
        android:textColor="@color/white"
        android:fontFamily="@raw/manrope_regular"
        android:background="@drawable/small_radius"
        android:layout_marginLeft="@dimen/_10sdp"/>
    <EditText
        android:id="@+id/etPasswordLogin"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_height="@dimen/_35sdp"
        android:inputType="textPassword"
        android:textSize="@dimen/_12ssp"
        android:layout_marginRight="@dimen/_10sdp"
        android:fontFamily="@raw/manrope_regular"
        android:textColor="@color/white"
        android:hint="Password"
        android:textColorHint="@color/hint"
        android:paddingLeft="@dimen/_10sdp"
        android:background="@drawable/small_radius"
        android:layout_marginLeft="@dimen/_10sdp"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_23sdp"

        android:text="Sign in"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="@dimen/_13ssp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/login_button"/>
    <TextView
        android:id="@+id/tvForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/blue"
        android:fontFamily="@raw/rl"
        android:text="Forget password?"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_17sdp"
            android:textSize="@dimen/_13ssp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/hint"
            android:fontFamily="@raw/rm"
            android:text="First time here?"/>
        <Button
            android:id="@+id/btnSignUp"
            android:textSize="@dimen/_12ssp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/login_button"
            android:backgroundTint="#4ab34c"/>
    </LinearLayout>
</LinearLayout>