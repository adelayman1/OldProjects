<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserImagePost"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignParentLeft="true"
                android:src="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUserNamePost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="пожаловать"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:id="@+id/ivAccountVerifiedPost"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/ic_round_done_24"
                        android:tint="@color/blue" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_7sdp"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSharePost"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_ios_share_24"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/ivMorePost"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_more_horiz_24"
                android:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <!--    <TextView-->
    <!--        android:id="@+id/tvHintPost"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="@dimen/_12sdp"-->
    <!--        android:layout_marginTop="@dimen/_7sdp"-->
    <!--        android:paddingRight="@dimen/_10sdp"-->
    <!--        android:layout_marginBottom="@dimen/_7sdp"-->
    <!--        android:text="#пожаловать пожаловатьпожаловать#пожаловатьпожаловатьaaaaaaaaaaaaaaaaaaaaaaaaaaaa "-->
    <!--        android:textColor="@color/white" />-->

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:scaleType="centerCrop" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/videoPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showFullScreenButton="true"
        app:showSeekBar="true"
        app:showYouTubeButton="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnLikePost"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/button_post"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivLikePost"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tvLikePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="195"
                android:textColor="#DCDADA" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/lnCommentPost"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/button_post"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:src="@drawable/ic_baseline_ios_share_24"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tvCommentPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:text="95"
                android:textColor="#DCDADA" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvHintPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:paddingRight="@dimen/_10sdp"
        android:text="#пожаловать пожаловатьпожаловать#пожаловатьпожаловатьaaaaaaaaaaaaaaaaaaaaaaaaaaaa "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvViewComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:text="view all comments"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/tvTimePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:text="13:bm"
        android:textColor="#DCDADA"
        android:textSize="@dimen/_9ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/black"
        android:backgroundTint="@color/black" />

</LinearLayout>