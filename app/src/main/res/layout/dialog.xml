<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@raw/manrope_bold"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />
    <LinearLayout
        android:id="@+id/lnDialogText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDialogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="adel ayman adel ayman adel ayman adel ayman adl ayman adel ayman"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />
</LinearLayout>
<LinearLayout
    android:id="@+id/lnDialogEditTexts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/etDialogFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/edit_text"
        android:fontFamily="@raw/manrope_regular"
        android:hint="enter text here"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingTop="@dimen/_7sdp"
        android:paddingRight="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        android:textSize="@dimen/_11ssp" />

    <EditText
        android:id="@+id/etDialogSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/edit_text"
        android:fontFamily="@raw/manrope_regular"
        android:hint="enter text here"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingTop="@dimen/_7sdp"
        android:inputType="text"
        android:paddingRight="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        android:textSize="@dimen/_11ssp" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPositiveDialog"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/dialog_btn"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnNavigateDialog"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/dialog_btn"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>